{
  "name": "core",
  "version": "1.0.0",
  "description": "Backend for Boilerplate",
  "private": true,
  "author": {
    "name": "Mahaverick Inc",
    "email": "support@mahaverick.com"
  },
  "scripts": {
    "dev": "nodemon",
    "start": "node dist/index.js",
    "build": "rm -rf dist/ && npx tsc && tsc-alias",
    "prepare": "husky",
    "lint": "npx eslint ./src",
    "lint:fix": "npx eslint ./src --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "check-format": "prettier --check \"src/**/*.ts\"",
    "db:generate": "drizzle-kit generate",
    "db:migrate:dev": "npx ts-node -r tsconfig-paths/register src/database/migrate.ts",
    "db:migrate": "npx ts-node -r tsconfig-paths/register src/database/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prettier": "prettier --write '**/*.{ts,js, mjs, cjs, json}'"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.658.1",
    "@aws-sdk/credential-providers": "^3.658.1",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.33.0",
    "drizzle-zod": "^0.5.1",
    "express": "^4.20.0",
    "express-async-handler": "^1.2.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "ms": "^2.1.3",
    "nodemailer": "^6.9.15",
    "pg": "^8.12.0",
    "postgres": "^3.4.4",
    "winston": "^3.14.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.3.1",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.13",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/ms": "^0.7.34",
    "@types/node": "^22.5.4",
    "@types/nodemailer": "^6.4.16",
    "@types/pg": "^8.11.8",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "drizzle-kit": "^0.24.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-drizzle": "^0.2.3",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-no-relative-import-paths": "^1.5.5",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.13.0",
    "husky": "^9.1.5",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.17.0"
  }
}
