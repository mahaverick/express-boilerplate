# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Set default charset
charset = utf-8

# 2 space indentation for TypeScript and JavaScript files
[*.{ts,js}]
indent_style = space
indent_size = 2

# Trim trailing whitespace
trim_trailing_whitespace = true

# Markdown files
[*.md]
trim_trailing_whitespace = false

# JSON files
[*.json]
indent_style = space
indent_size = 2

# YAML files
[*.yml]
indent_style = space
indent_size = 2

# Configuration files
[*.{eslintrc,prettierrc}]
indent_style = space
indent_size = 2